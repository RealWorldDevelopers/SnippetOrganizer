@model SnippetOrganizer.Ui.Models.ReposViewModel

<div class="card">
   <div class="card-header">
      <h1>@ViewData["Title"]</h1>
   </div>
   <div class="card-body">
      <div>
         <div>
            <label class="d-none d-md-block">
               <input class="form-control" type="search" placeholder="Search for ..." id="repoSearch" />
            </label>
         </div>
         <ul class="list-group-flush" id="ulGists">

            @foreach (var repo in Model.Repos)
            {
               <li class="list-group-item">
                  <partial name="_RepoListItem" model="repo" />
               </li>
            }

         </ul>

      </div>

   </div>
   <div class="card-footer bg-secondary text-light"></div>
</div>


@section Scripts{
   @*<script src="~/js/recipe.min.js" asp-append-version="true" type="text/javascript"></script>*@
}